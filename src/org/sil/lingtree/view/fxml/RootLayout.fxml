                </Menu>
                <Menu mnemonicParsing="true" text="%menu.help">
                  <items>
                    <MenuItem mnemonicParsing="true" text="%menu.about" onAction="#handleAbout" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="toolbarbutton"
				BorderPane.alignment="CENTER">
              <items>
              		<Button fx:id="buttonToolbarFileNew" contentDisplay="GRAPHIC_ONLY"
						graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true"
						onAction="#handleNewTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileOpen" contentDisplay="GRAPHIC_ONLY"
						graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true"
