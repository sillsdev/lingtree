   <top>
      <VBox prefHeight="75.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="true" text="%menu.file">
                  <items>
                    <MenuItem mnemonicParsing="true" text="%menu.exit" onAction="#handleExit" />
