<!-- <?import org.controlsfx.control.StatusBar?> -->

<BorderPane prefHeight="660.0" prefWidth="1000.0" stylesheets="@LingTree.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sil.lingtree.view.RootLayoutController">
   <top>
      <VBox prefHeight="75.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="true" text="%menu.file">
                  <items>
                    <MenuItem accelerator="Ctrl+n" mnemonicParsing="true" onAction="#handleNewTree" text="%menu.new" />
					<MenuItem accelerator="Ctrl+o" mnemonicParsing="true" onAction="#handleOpenTree" text="%menu.open" />
					<MenuItem accelerator="Ctrl+s" mnemonicParsing="true" onAction="#handleSaveTree" text="%menu.save" />
					<MenuItem mnemonicParsing="true" onAction="#handleSaveTreeAs" text="%menu.saveas" />
					<SeparatorMenuItem />
					<CheckMenuItem fx:id="menuItemSaveAsPng" mnemonicParsing="true" onAction="#handleMenuSaveAsPng" text="%menu.saveaspng" />
					<CheckMenuItem fx:id="menuItemSaveAsSVG" mnemonicParsing="true" onAction="#handleMenuSaveAsSVG" text="%menu.saveassvg" />
                    <SeparatorMenuItem />
                    <MenuItem mnemonicParsing="true" onAction="#handleExit" text="%menu.exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.edit">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleCopy" text="%menu.copy" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.tree">
                  <items>
                    <MenuItem fx:id="menuItemDrawTree" accelerator="ctrl+d" mnemonicParsing="true" onAction="#handleDrawTree" text="%menu.drawtree" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.format">
                  <items>
                    <CheckMenuItem fx:id="menuItemUseFlatTree" mnemonicParsing="true" onAction="#handleMenuUseFlatTree" text="%menu.useflattree" />
					<SeparatorMenuItem />
					<MenuItem mnemonicParsing="true" onAction="#handleGlossFontInfo" text="%menu.glossfont" />
					<MenuItem mnemonicParsing="true" onAction="#handleLexicalFontInfo" text="%menu.lexicalfont" />
					<MenuItem mnemonicParsing="true" onAction="#handleNonTerminalFontInfo" text="%menu.nonterminalfont" />
					<SeparatorMenuItem />
					<MenuItem mnemonicParsing="true" onAction="#handleTreeSpacingParameters" text="%menu.treespacingparameters" />
					<MenuItem mnemonicParsing="true" onAction="#handleBackgroundAndLineParameters" text="%menu.backgroundandlineparameters" />
                  </items>
                </Menu>
				<Menu mnemonicParsing="true" text="%menu.settings">
					<items>
						<CheckMenuItem fx:id="menuItemDrawAsType" mnemonicParsing="true" onAction="#handleMenuDrawAsType" text="%menu.drawastype" />
						<CheckMenuItem fx:id="menuItemShowMatchingParenWithArrowKeys" mnemonicParsing="true" onAction="#handleMenuShowMatchingParenWithArrowKeys" text="%menu.showmatchingparenwitharrowkeys" />
						<SeparatorMenuItem />
						<MenuItem mnemonicParsing="true" onAction="#handleSaveTreeParameters" text="%menu.savetreeparameters" />
						<SeparatorMenuItem />
						<MenuItem mnemonicParsing="true" onAction="#handleChangeInterfaceLanguage" text="%menu.changeinterfacelanguage" />
					</items>
				</Menu>
                <Menu mnemonicParsing="true" text="%menu.help">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleAbout" text="%menu.about" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="toolbarbutton" BorderPane.alignment="CENTER">
              <items>
                    <Button fx:id="buttonToolbarFileNew" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleNewTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileOpen" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleOpenTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileSave" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleSaveTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
					<Button fx:id="buttonToolbarEditCut" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleToolBarCut" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarEditCopy" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleToolBarCopy" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarEditPaste" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleToolBarPaste" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
					<Button fx:id="buttonToolbarDrawTree" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleDrawTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
	                <ToggleButton fx:id="toggleButtonUseFlatTree" onAction="#handleUseFlatTree" text="%label.useflattree" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
	                <ToggleButton fx:id="toggleButtonShowMatchingParenWithArrowKeys" onAction="#handleShowMatchingParenWithArrowKeys" text="→(  )←" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
	                <ToggleButton fx:id="toggleButtonSaveAsPng" onAction="#handleSaveAsPng" text="PNG" />
	                <ToggleButton fx:id="toggleButtonSaveAsSVG" onAction="#handleSaveAsSVG" text="SVG" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox prefHeight="21.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%label.key" />
         </children>
      </VBox>
   </bottom>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <SplitPane dividerPositions="0.3644524236983842" orientation="VERTICAL">
                     <items>
                              <TextArea fx:id="treeDescription" prefHeight="200.0" prefWidth="1000.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                        <ScrollPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                           <content>
                                    <Pane fx:id="drawingArea" prefHeight="1000.0" prefWidth="10000.0" style="-fx-background-color: #FFFFFF;"  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </content>
                        </ScrollPane>
                     </items>
                  </SplitPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
