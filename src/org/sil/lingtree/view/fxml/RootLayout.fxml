<BorderPane prefHeight="660.0" prefWidth="1000.0" stylesheets="@LingTree.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sil.lingtree.view.RootLayoutController">
   <top>
      <VBox prefHeight="75.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="true" text="%menu.file">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleNewTree"
						text="%menu.new" accelerator="Ctrl+n" />
					<MenuItem mnemonicParsing="true" onAction="#handleOpenTree"
						text="%menu.open" accelerator="Ctrl+o" />
					<MenuItem mnemonicParsing="true" onAction="#handleSaveTree"
						text="%menu.save" accelerator="Ctrl+s" />
					<MenuItem mnemonicParsing="true" onAction="#handleSaveTreeAs"
						text="%menu.saveas" />
                    <SeparatorMenuItem />
                    <MenuItem mnemonicParsing="true" onAction="#handleExit" text="%menu.exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.edit">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleCopy" text="%menu.copy" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.tree">
                  <items>
                    <MenuItem fx:id="menuItemDrawTree" accelerator="ctrl+d" mnemonicParsing="true" onAction="#handleDrawTree" text="%menu.drawtree" />
                    <CheckMenuItem fx:id="menuItemUseFlatTree" mnemonicParsing="true" onAction="#handleMenuUseFlatTree" text="%menu.useflattree" />
                  </items>
                </Menu>

					<Menu mnemonicParsing="true" text="%menu.settings">
						<items>
<!-- 							<MenuItem mnemonicParsing="true" onAction="#handleVernacularFont" -->
<!-- 								text="%menu.vernacularfont" fx:id="menuItemVernacularFont" /> -->
