                <Menu mnemonicParsing="true" text="%menu.edit">
                  <items>
                    <MenuItem mnemonicParsing="true" text="%menu.copy" onAction="#handleCopy" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="true" text="%menu.tree">
                  <items>
                    <MenuItem fx:id="menuItemDrawTree" onAction="#handleDrawTree" mnemonicParsing="true" text="%menu.drawtree" accelerator="ctrl+d"/>
