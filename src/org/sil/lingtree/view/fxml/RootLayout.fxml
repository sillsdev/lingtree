<!-- 									onAction="#handleHyphenationParametersSimpleList" text="%menu.exporthyphenationparametersforindesign" /> -->
<!-- 								<MenuItem mnemonicParsing="true" -->
<!-- 									onAction="#handleHyphenationParametersParaTExt" text="%menu.exporthyphenationparametersforparatext" /> -->
<!-- 								<MenuItem mnemonicParsing="true" -->
<!-- 									onAction="#handleHyphenationParametersXLingPaper" text="%menu.exporthyphenationparametersforxlingpaper" /> -->
<!-- 							</Menu> -->
							<MenuItem mnemonicParsing="true"
								onAction="#handleSaveTreeParameters" text="%menu.savetreeparameters" />
							<SeparatorMenuItem />
							<MenuItem mnemonicParsing="true"
								onAction="#handleChangeInterfaceLanguage" text="%menu.changeinterfacelanguage" />
						</items>
					</Menu>


                <Menu mnemonicParsing="true" text="%menu.help">
                  <items>
                    <MenuItem mnemonicParsing="true" onAction="#handleAbout" text="%menu.about" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="toolbarbutton" BorderPane.alignment="CENTER">
              <items>
                    <Button fx:id="buttonToolbarFileNew" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleNewTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileOpen" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleOpenTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarFileSave" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleSaveTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
					<Button fx:id="buttonToolbarEditCut" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleToolBarCut" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarEditCopy" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleToolBarCopy" prefHeight="23.0" prefWidth="17.0" text="" />
					<Button fx:id="buttonToolbarEditPaste" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleToolBarPaste" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
					<Button fx:id="buttonToolbarDrawTree" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" minWidth="17.0" mnemonicParsing="true" onAction="#handleDrawTree" prefHeight="23.0" prefWidth="17.0" text="" />
					<Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="3.0" />
	                <ToggleButton fx:id="toggleButtonUseFlatTree" onAction="#handleUseFlatTree" text="%label.useflattree" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox prefHeight="21.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%label.key" />
         </children>
      </VBox>
   </bottom>
