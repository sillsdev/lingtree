<?xml version="1.0" encoding="UTF-8"?>
<project name="build-do-compile" basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />

		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="controlsfx-8.40.12.jar" />
				<include name="controlsfx-8.40.12license.txt" />
				<include name="antlr-4.7-complete.jar"/>
				<include name="ANTLR-4-License.txt"/>
				<include name="richtextfx-fat-0.10.6.jar"/>
				<include name="libjavadev-1.3.0.jar"/>
				<include name="RichTextFX-0.10.6-License.txt"/>
				<include name="jakarta.activation.jar" />
				<include name="jakarta.xml.bind-api.jar" />
				<include name="jaxb-core.jar" />
				<include name="jaxb-impl.jar" />
				<include name="jaxb-jxc.jar" />
				<include name="jaxb-xjc.jar" />
				<include name="LICENSEJAXB.txt" />
				<include name="${java.home}/bin/java.exe"/>
			</fileset>
		</copy>

		<!-- Copy project references -->

		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*" />
			</fileset>
		</copy>

		<javac includeantruntime="false" source="11" target="11" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*" />
				</fileset>
			</classpath>
		</javac>

		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
			<fileset dir="project/src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>


	</target>
</project>